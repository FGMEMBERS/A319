<?xml version="1.0"?>

<PropertyList>

  <path>lightprojection.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>projection</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>projection</object-name>
  </animation>

  <!-- Une ombre pour OSG en attendant mieux ;) basé sur l'ombre du DC 3-->
  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>projection</object-name>
    <property>/orientation/pitch-deg</property>
    <factor> -1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>projection</object-name>
    <property>/orientation/roll-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Translate to ground level -->
  <animation>
   <type>translate</type>
   <object-name>projection</object-name>
   <property>/position/altitude-agl-ft</property>
   <factor> -0.3 </factor>
   <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
   </center>
   <axis>
     <x> 0 </x>
     <y> 0 </y>
     <z> 1 </z>
   </axis>
 </animation>
 

  <animation>
    <type>select</type>
    <object-name>projection</object-name>
    <condition>
    <and>
      <property>/controls/switches/landing-light</property>
      <greater-than>
	   <property>gear/gear[0]/position-norm</property>
	   <value>0.2</value>
	  </greater-than>
    </and>
    </condition>
  </animation>

</PropertyList>
